<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.om3g4.shakeit">

    <uses-sdk
        android:maxSdkVersion="24"
        android:minSdkVersion="8" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/drought"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preparation"
            android:label="@string/title_activity_preparation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tools"
            android:label="@string/title_activity_tools"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LocateMe"
            android:label="@string/title_activity_locate_me"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Emergency"
            android:label="@string/title_activity_emergency"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Donate"
            android:label="@string/title_activity_donate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AmiReady"
            android:label="@string/title_activity_ami_ready"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AmiSafe"
            android:label="@string/title_activity_ami_safe"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>