<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_storm_apple_mac_blue_symbol_8281_1080x1920"
    android:fitsSystemWindows="true"
    tools:context="com.example.om3g4.shakeit.MainActivity"
    android:id="@+id/drawerLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button"
            android:background="@drawable/notes"
            android:layout_alignTop="@+id/button2"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button2"
            android:background="@drawable/information"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button3"
            android:background="@drawable/medical"
            android:layout_above="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            android:background="@drawable/technology"
            android:layout_alignTop="@+id/button3"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button5"
            android:background="@drawable/medical_kit"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button6"
            android:background="@drawable/settings"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button7"
            android:background="@drawable/signs"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tools"
            android:id="@+id/textView2"
            android:textColor="#d2cdcd"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/am_i_ready"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/preparation"
            android:id="@+id/textView4"
            android:textColor="#c6c2c2"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/i_am_safe"
            android:id="@+id/textView5"
            android:textColor="#faf8f8"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/donate"
            android:id="@+id/textView6"
            android:textColor="#faf8f8"
            android:layout_alignTop="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/emergeny"
            android:id="@+id/textView7"
            android:textColor="#faf8f8"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/locate_me"
            android:id="@+id/textView8"
            android:textColor="#faf8f8"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
