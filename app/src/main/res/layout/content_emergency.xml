<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_during"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.om3g4.shakeit.Emergency">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50sp"
            tools:ignore="UselessLeaf">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ambulanceTV"
                android:text="hhhhhhhh jhf uh huh"
                android:textColor="@color/fontColor1"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/background3"
                android:padding="10sp"
                android:gravity="center"
                android:textIsSelectable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fireServiceTV"
                android:text="hhhhhhhh jhf uh huh"
                android:textColor="@color/fontColor1"
                android:textSize="20sp"
                android:background="@drawable/background2"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textIsSelectable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/policeTV"
                android:text="hhhhhhhh jhf uh huh"
                android:textColor="@color/fontColor1"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/background4"
                android:padding="10sp"
                android:gravity="center"
                android:textIsSelectable="true"
                />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
