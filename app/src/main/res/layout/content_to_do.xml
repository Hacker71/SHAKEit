<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_to_do"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.om3g4.shakeit.ToDo"
    tools:showIn="@layout/activity_to_do">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="10sp"
        tools:ignore="UselessLeaf,UselessParent">

        <TextView
            android:text="@string/afterTV"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:textSize="35sp"
            android:id="@+id/textView12"
            android:background="@drawable/background2"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/beforeTV"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:textSize="35sp"
            android:id="@+id/textView10"
            android:background="@drawable/background3"
            android:layout_below="@+id/textView14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/duringTV"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:textSize="35sp"
            android:id="@+id/textView11"
            android:background="@drawable/background1"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="62dp"
            android:text="@string/what_to_do"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@drawable/background4"
            android:id="@+id/textView14" />
    </RelativeLayout>
</RelativeLayout>
