<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.om3g4.shakeit.Tools"
    tools:showIn="@layout/activity_tools">



        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/flashLightBtn"
            android:background="@drawable/torch"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="66dp"
            />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/strobeLightBtn"
            android:background="@drawable/torch_1"
            android:layout_alignTop="@+id/flashLightBtn"
            android:layout_alignLeft="@+id/radioBtn"
            android:layout_alignStart="@+id/radioBtn" />

        <Button
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:id="@+id/sirenBtn"
            android:background="@drawable/siren"
            android:layout_alignTop="@+id/radioBtn"
            android:layout_alignLeft="@+id/flashLightBtn"
            android:layout_alignStart="@+id/flashLightBtn" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/radioBtn"
            android:background="@drawable/radio"
            android:layout_marginRight="43dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="108dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/flash"
            android:id="@+id/textView16"
            android:layout_below="@+id/flashLightBtn"
            android:layout_alignRight="@+id/flashLightBtn"
            android:layout_alignEnd="@+id/flashLightBtn"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/strobe_light"
            android:id="@+id/textView17"
            android:layout_alignTop="@+id/textView16"
            android:layout_alignRight="@+id/strobeLightBtn"
            android:layout_alignEnd="@+id/strobeLightBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/siren"
            android:id="@+id/textView18"
            android:layout_below="@+id/sirenBtn"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginTop="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/radio"
            android:id="@+id/textView19"
            android:layout_alignTop="@+id/textView18"
            android:layout_alignLeft="@+id/radioBtn"
            android:layout_alignStart="@+id/radioBtn" />


</RelativeLayout>
